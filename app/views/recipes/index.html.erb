

<div class="recipes-selection">
  <%= form_tag("/recipes", method: "get", class: "form-inline") do %>
    <div class="form-group">
      <%= select_tag "blogger_id", options_from_collection_for_select(User.all, "id", "email", @blogger_id), include_blank: true,prompt: 'Select blogger', class: "selectpicker" %>
    </div>
    <div class="form-group">
      <%= select_tag "date", options_for_select(["Today", "This week", "Older recipes"], @date), include_blank: true, prompt: 'Select Date', class: "selectpicker" %>
    </div>
    <div class="form-group">
      <%= select_tag "ingredient_id", options_from_collection_for_select(Ingredient.all, "id", "name", @ingredient_id), include_blank: true, prompt: 'Select Ingredients', class: "selectpicker" %>
    </div>
    <div class="form-group">
    <%= submit_tag "Filter", class: "btn btn-default" %>
  </div>
  <% end %>
</div>


<% if @recipes.blank? %>
  <%= "No recipe matches the criteria" %>
<% else %>
  <ul>
    <%= render partial: 'recipe', collection: @recipes  %>
  </ul>
<% end %>
