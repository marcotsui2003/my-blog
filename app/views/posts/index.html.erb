
<%= form_tag("/posts", method: "get") do %>
  <%= select_tag "blogger_id", options_from_collection_for_select(User.all, "id", "email"), include_blank: true,prompt: 'Select blogger' %>
  <%= select_tag "date", options_for_select(["This week", "This month", "Older posts"]), include_blank: true, prompt: 'Select Date' %>
  <%= select_tag "category", options_from_collection_for_select(Category.all, "id", "name"), include_blank: true, prompt: 'Select Categories' %>
  <%= submit_tag "Filter" %>
<% end %>

<% if @posts.blank? %>
  <%= "No post matches the criteria" %>
<% else %>
  <ul>
    <%= render partial: 'post', collection: @posts  %>
  </ul>
<% end %>
